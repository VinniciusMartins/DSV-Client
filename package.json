{
  "name": "DSV-Client",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "description": "Electron client to print a PDF and track Windows print job status with PowerShell.",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack:win": "npm run build:ico && electron-builder --win portable",
    "dist:win": "npm run build:ico && electron-builder --win nsis",
    "build:ico": "node build/make-ico.js"
  },
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^3.0.0",
    "sharp": "^0.34.3"
  },
  "build": {
    "appId": "com.dsv.client",
    "productName": "DSV-Client",
    "files": [
      "main.js",
      "preload.js",
      "controllers/**/*",
      "services/**/*",
      "assets/**/*",
      "models/**/*",
      "renderer/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "vendor/PowerShell-7.5.2-win-x64.msi",
        "to": "PowerShell-7.5.2-win-x64.msi"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/app-icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DSV-Client",
      "runAfterFinish": true,
      "include": "build/installer.nsh"
    }
  }
}
